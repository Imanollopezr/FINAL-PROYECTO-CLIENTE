# Variables de entorno para Vite (deben empezar con VITE_)

# Firebase Web App config
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Opcional: ID de medición (si usas Analytics)
# VITE_FIREBASE_MEASUREMENT_ID=

# Base URL del backend API (usada por apiConstants.js)
# Ejemplos:
# http://localhost:5000
# https://api.petlove.com
VITE_API_BASE_URL=http://localhost:5000

# Config opcional para OAuth/NextAuth (si aplica)
# VITE_NEXTAUTH_URL=
# VITE_NEXTAUTH_SECRET=

# =========================
# Backend API (ASP.NET Core)
# =========================
# Entorno y puerto del servidor
ASPNETCORE_ENVIRONMENT=Production
PORT=8090

# SendGrid (correo)
SendGrid__ApiKey=YOUR_SENDGRID_API_KEY_HERE
SendGrid__FromEmail=munozvanegasy@gmail.com
SendGrid__FromName=PetLove

# JWT
Jwt__Key=CHANGE_ME_IN_PRODUCTION
Jwt__Issuer=PetLove.API
Jwt__Audience=PetLove.Client

# Base de datos (elige proveedor)
UsePostgreSQL=false
UseInMemoryDb=false
ConnectionStrings__DefaultConnection=Server=localhost;Database=PetLove;Trusted_Connection=true;TrustServerCertificate=true;
ConnectionStrings__PostgreSQLConnection=Host=localhost;Port=5432;Database=petlove;Username=postgres;Password=postgres;SSL Mode=Disable

# Frontend (CORS y enlaces en emails)
Frontend__BaseUrl=http://localhost:5175

# =========================
# Checkout: Transferencia
# =========================
# Nombre del titular/cuenta
VITE_ACCOUNT_NAME=
# Nequi: número de teléfono y (opcional) URL de imagen QR
VITE_NEQUI_PHONE=
VITE_NEQUI_QR_URL=
# Bancolombia: número de cuenta, tipo (Ahorros/Corriente) y (opcional) URL QR
VITE_BANCOLOMBIA_ACCOUNT=
VITE_BANCOLOMBIA_ACCOUNT_TYPE=Ahorros
VITE_BANCOLOMBIA_QR_URL=